{
    "name": "IngestAndLoadPipeline",
    "properties": {
        "activities": [
            {
                "name": "Get CSV from Blob",
                "type": "Copy",
                "dependsOn": [],
                "policy": {
                    "timeout": "7.00:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "BlobSource"
                    },
                    "sink": {
                        "type": "AzureBlobSink"
                    }
                },
                "inputs": [
                    {
                        "referenceName": "InputBlobDataset",
                        "type": "DatasetReference"
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "StagingBlobDataset",
                        "type": "DatasetReference"
                    }
                ]
            },
            {
                "name": "Run Python ETL Script",
                "type": "ExecuteBatchActivity",
                "dependsOn": [
                    {
                        "activity": "Get CSV from Blob",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "typeProperties": {
                    "resourceLinkedService": {
                        "referenceName": "AzureBatchLinkedService",
                        "type": "LinkedServiceReference"
                    },
                    "resourcePool": "DefaultPool",
                    "commandLine": "python run_pipeline.py",
                    "userIdentity": {
                        "type": "ManagedIdentity"
                    }
                }
            }
        ]
    }
}